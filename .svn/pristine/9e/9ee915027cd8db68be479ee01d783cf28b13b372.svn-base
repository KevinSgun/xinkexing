<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <View
        style="@style/DividerLineHorizontal"
        android:layout_height="0.2dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h100"
        android:background="@color/white"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/preview"
            android:layout_width="@dimen/h70"
            android:layout_height="@dimen/h78"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="@dimen/w20"
            android:background="@null"
            android:drawablePadding="@dimen/w10"
            android:text="预览"
            android:textSize="@dimen/w25"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                style="@style/CommonText"
                android:text="已添加"
                android:textSize="@dimen/w26" />

            <TextView
                android:id="@+id/current_pic_num"
                style="@style/CommonText"
                android:text="2/6"
                android:textColor="#f72a93"
                android:textSize="@dimen/w26" />

            <TextView
                style="@style/CommonText"
                android:text="张照片"
                android:textSize="@dimen/w26" />
        </LinearLayout>

        <Button
            android:id="@+id/confirm"
            style="@style/CommonButton"
            android:layout_width="@dimen/w100"
            android:layout_height="@dimen/h58"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/w29"
            android:background="#f72a93"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/w26" />
    </FrameLayout>

</LinearLayout>