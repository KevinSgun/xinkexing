<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/toAddressLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/h40"
        >
        <TextView
            android:id="@+id/shippingAddress"
            style="@style/CommonText"
            android:textColor="@color/textColorPrimaryGray"
            android:layout_marginLeft="@dimen/w24"
            android:text="收货地址："/>
        <TextView
            android:id="@+id/contactNameTv"
            style="@style/CommonText"
            android:layout_marginLeft="@dimen/w24"
            android:layout_toRightOf="@id/shippingAddress"
            android:text=""/>
        <TextView
            android:id="@+id/phoneNumTv"
            style="@style/CommonText"
            android:layout_marginLeft="@dimen/w24"
            android:layout_toRightOf="@id/contactNameTv"
            android:text=""/>
        <ImageView
            android:id="@+id/arrowAddressIv"
            android:layout_width="@dimen/w18"
            android:layout_height="@dimen/h10"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/w24"
            android:src="@mipmap/ic_arrow_down"/>
        <TextView
            android:id="@+id/addressTv"
            style="@style/CommonText"
            android:layout_below="@id/contactNameTv"
            android:layout_alignLeft="@id/contactNameTv"
            android:layout_toLeftOf="@id/arrowAddressIv"
            android:layout_marginTop="@dimen/h30"
            android:layout_marginRight="@dimen/w24"
            android:text=""/>
        <View style="@style/DividerLineHorizontal"
            android:layout_below="@id/addressTv"
            android:layout_marginTop="@dimen/h18"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/toDetailLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h100"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/amount"
            style="@style/CommonText"
            android:textColor="@color/textColorPrimaryGray"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/w24"
            android:text="支付金额："/>
        <TextView
            android:id="@+id/amountTv"
            style="@style/CommonText"
            android:textColor="@color/text_red"
            android:layout_toRightOf="@id/amount"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/w24"
            android:text="@string/rmb"/>
        <ImageView
            android:id="@+id/arrowDetailIv"
            android:layout_width="@dimen/w18"
            android:layout_height="@dimen/h10"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/w24"
            android:src="@mipmap/ic_arrow_down"/>
        <TextView
            android:id="@+id/checkDetail"
            style="@style/CommonText"
            android:textColor="@color/textColorPrimaryGray"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/arrowDetailIv"
            android:layout_marginRight="@dimen/w24"
            android:layout_marginLeft="@dimen/w24"
            android:text="查看明细"/>
        <View style="@style/DividerLineHorizontal"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h100"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/payType"
            style="@style/CommonText"
            android:textColor="@color/textColorPrimaryGray"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/w24"
            android:text="支付方式："/>
        <ImageView
            android:id="@+id/payIconIv"
            android:layout_width="@dimen/w44"
            android:layout_height="@dimen/w44"
            android:layout_toRightOf="@id/payType"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/w24"
            android:src="@mipmap/ic_pay_we_chat"/>
        <TextView
            style="@style/CommonText"
            android:layout_toRightOf="@id/payIconIv"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/w24"
            android:text="微信支付"/>

        <View style="@style/DividerLineHorizontal"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</LinearLayout>