<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/w488"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_check_result_top_bg"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
               style="@style/LargeText"
                android:textColor="@color/text_theme_color"
                android:textSize="@dimen/w36"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/h80"
                android:text="当前得分"/>
            <FrameLayout
                android:layout_width="@dimen/w380"
                android:layout_height="@dimen/w128"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/h24"
                android:background="@mipmap/ic_score_bg"
                >
                <TextView
                    android:id="@+id/scoreTv"
                    style="@style/LargeText"
                    android:textColor="@color/white"
                    android:textSize="@dimen/w80"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/w6"
                    android:shadowColor="@color/textColorPrimaryGray"
                    android:shadowRadius="3"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:text="68"/>
            </FrameLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/h24"
                android:visibility="gone">
                <TextView
                    style="@style/SmallText"
                    android:textColor="@color/textColorPrimary"
                    android:text="击败了全国"/>
                <TextView
                    style="@style/CommonText"
                    android:textColor="@color/text_theme_color"
                    android:text="82.3%"/>
                <TextView
                    style="@style/SmallText"
                    android:textColor="@color/textColorPrimary"
                    android:text="的人，再接再厉哦~"/>
            </LinearLayout>
            <android.support.v7.widget.CardView
                android:layout_width="@dimen/w680"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/h70"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/w10"
                app:cardElevation="@dimen/w8"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="false"
                >
                <LinearLayout
                    android:id="@+id/resultListLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    />
                </android.support.v7.widget.CardView>
            <LinearLayout
                android:id="@+id/doctorSAdviceLayout"
                android:layout_width="@dimen/w680"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/h40"
                android:paddingTop="@dimen/h32"
                android:paddingBottom="@dimen/h32"
                android:paddingLeft="@dimen/w24"
                android:paddingRight="@dimen/w24"
                android:minHeight="@dimen/w200"
                android:orientation="vertical"
                android:background="@drawable/bg_purple_stroke_rectangle_corner_r10"
                android:visibility="gone">
                    <TextView
                        style="@style/SmallText"
                        android:textSize="@dimen/w20"
                        android:textColor="@color/text_theme_color"
                        android:layout_gravity="center_horizontal"
                        android:text="—————— 医嘱 ——————"/>

                <TextView
                    android:id="@+id/doctorSAdviceTv"
                    style="@style/SmallText"
                    android:textColor="@color/textColorPrimary"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/h32"
                    android:text="已证明肺癌、心管疾病、呼吸道疾病及其他多种疾病与吸烟有关。请保持不吸烟，同时注意被动吸烟和主动吸烟一样受害，因此希望您远离吸烟的环境!

严重的睡眠不足会引起疲劳乏力，影响工作效率，甚至诱发急性心脑血管疾病。您需要开始规律的生活，消除不利于睡眠的因素，做有利于睡眠的活动，迅速改善睡眠状况。"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/actionIv"
        android:layout_width="@dimen/w176"
        android:layout_height="@dimen/w176"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="@dimen/h160"
        android:layout_marginRight="@dimen/w24"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_action" />
</FrameLayout>