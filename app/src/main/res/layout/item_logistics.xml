<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/w108"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <View
            android:id="@+id/logisticsTopView"
            style="@style/DividerLineVertical"
            android:layout_height="@dimen/h24" />

        <ImageView
            android:id="@+id/circlePointIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:id="@+id/logisticsBottomView"
            style="@style/DividerLineVertical" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingRight="@dimen/w24"
        android:paddingBottom="@dimen/w24">
        <TextView
            android:id="@+id/logisticsContentTv"
            style="@style/ContentText"
            android:layout_marginTop="@dimen/h24"
            android:textColor="@color/textColorPrimaryGray"
            android:text="南山前海的派件正在为您派送中，请注意保持手机畅通！"/>
        <TextView
            android:id="@+id/logisticsTimeTv"
            style="@style/ContentText"
            android:layout_below="@id/logisticsContentTv"
            android:layout_marginTop="@dimen/h24"
            android:textColor="@color/textColorPrimaryGray"
            android:text="2017-4-12 15:30"/>
        <View
            style="@style/DividerLineHorizontal"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</LinearLayout>