<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="@dimen/w24">

        <TextView
            style="@style/CommonText"
            android:layout_marginTop="@dimen/h10"
            android:text="医师执业证书" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/h16"
            android:text="医师执业证书（带执业信息的详情页）"
            android:textColor="@color/textColorPrimaryGray"
            android:textSize="@dimen/w24" />
        <com.zitech.framework.widget.RemoteImageView
            android:id="@+id/doctorCertificateIv"
            android:layout_width="@dimen/w220"
            android:layout_height="@dimen/w220"
            android:layout_marginTop="@dimen/h16"
            android:src="@mipmap/ic_photo_camera"/>

        <TextView
            style="@style/CommonText"
            android:layout_marginTop="@dimen/h40"
            android:text="图片示例" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/h16"
            android:text="医师执业证书"
            android:textColor="@color/textColorPrimaryGray"
            android:textSize="@dimen/w24" />
        <ImageView
            android:layout_width="@dimen/w220"
            android:layout_height="@dimen/w220"
            android:layout_marginTop="@dimen/h16"
            android:src="@mipmap/ic_photo_example"/>
    </LinearLayout>

    <View style="@style/SpaceAutoFit" />

    <Button
        android:id="@+id/commitForReviewBtn"
        style="@style/CommonButton"
        android:layout_marginBottom="@dimen/h40"
        android:text="提交审核" />
</LinearLayout>