<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_rectangle_corner_r10"
    android:orientation="vertical" >
    <TextView
        android:layout_marginTop="@dimen/h37"
        style="@style/CommonText"
        android:textSize="@dimen/w34"
        android:text="提示"
        android:layout_width="match_parent"
        android:textColor="@color/blue_37ceef"
        android:gravity="center"/>
    <TextView
        android:id="@+id/content"
        style="@style/CommonText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/h13"
        android:gravity="center"
        android:textSize="@dimen/w32" 
        android:paddingLeft="@dimen/w48"
        android:paddingRight="@dimen/w48"
        android:text=""
     />

    <View style="@style/DividerLineHorizontal"
        android:layout_marginTop="@dimen/h55"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <Button
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/w96"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/w32"
            android:background="@drawable/sl_common_item_left_corner"/>
        <View
            style="@style/DividerLineVertical"/>
        <Button
            android:id="@+id/confirm"
            android:layout_width="0dp"
            android:layout_height="@dimen/w96"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textSize="@dimen/w32"
            android:background="@drawable/sl_common_item_right_corner"
            android:textColor="@color/textColorPrimary"/>
    </LinearLayout>

</LinearLayout>