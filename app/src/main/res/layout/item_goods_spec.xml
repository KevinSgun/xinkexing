<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="@dimen/w24"
    android:paddingTop="@dimen/w40"
    android:orientation="vertical">

    <TextView
        android:id="@+id/specTypeTv"
        style="@style/CommonText"
        android:layout_marginTop="@dimen/h6"
        android:layout_marginLeft="@dimen/w24"
        android:text="容量：" />
    <com.thinkeract.tka.widget.TagCloudView
        android:id="@+id/specNameTag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/h24"
        app:tcvCanTagClick="true"
        app:tcvIsSingleSelect="true"/>
</LinearLayout>