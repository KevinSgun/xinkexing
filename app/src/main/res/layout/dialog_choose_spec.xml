<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/topPlaceHolder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h84"/>
    <View
        android:id="@+id/secondBg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h200"
        android:background="@color/white"
        android:layout_below="@id/topPlaceHolder"
        />
    <com.zitech.framework.widget.RemoteImageView
        android:id="@+id/goodsPicIv"
        android:layout_width="@dimen/w232"
        android:layout_height="@dimen/w232"
        android:scaleType="centerCrop"
        android:layout_marginLeft="@dimen/w24"
        android:src="@mipmap/ic_loading_square"/>
    <TextView
        android:id="@+id/goodsNameTv"
        style="@style/CommonText"
        android:text="商品名字商品名字"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_toRightOf="@id/goodsPicIv"
        android:layout_alignTop="@id/secondBg"
        android:layout_margin="@dimen/w24"/>
    <ImageView
        android:id="@+id/cancelIv"
        android:layout_width="@dimen/w50"
        android:layout_height="@dimen/w50"
        android:scaleType="centerInside"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/goodsNameTv"
        android:src="@mipmap/ic_cancel"/>

    <TextView
        android:id="@+id/goodsPriceTv"
        style="@style/LargeText"
        android:textColor="@color/text_red"
        android:layout_below="@id/goodsNameTv"
        android:layout_toRightOf="@id/goodsPicIv"
        android:layout_marginLeft="@dimen/w24"
        android:text="@string/rmb"/>
    <View
        android:id="@+id/topDividerLine"
        style="@style/DividerLineHorizontal"
        android:layout_alignBottom="@id/secondBg"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/goodsSpecRv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h380"
        android:background="@color/white"
        android:paddingBottom="@dimen/h30"
        android:layout_below="@id/topDividerLine"/>
    <View
        android:id="@+id/bottomDividerLine"
        style="@style/DividerLineHorizontal"
        android:layout_below="@id/goodsSpecRv"
        />
    <LinearLayout
        android:id="@+id/chooseCountLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h120"
        android:layout_below="@id/bottomDividerLine"
        android:paddingLeft="@dimen/w24"
        android:paddingRight="@dimen/w24"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            style="@style/CommonText"
            android:layout_gravity="center_vertical"
            android:text="数量："/>
        <View style="@style/SpaceAutoFit"/>
        <LinearLayout
            android:id="@+id/changeCountLayout"
            android:layout_width="@dimen/w260"
            android:layout_height="@dimen/h60"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/w24"
            android:background="@drawable/bg_gray_stroke_rectangle_corner_r10"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/minusIv"
                android:layout_width="@dimen/w80"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_minus"/>
            <TextView
                android:id="@+id/countTv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/w24"
                android:gravity="center"
                android:text="1"/>
            <ImageView
                android:id="@+id/plusIv"
                android:layout_width="@dimen/w80"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_plus_red"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/submitBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h100"
        android:layout_below="@id/chooseCountLayout"
        android:textSize="@dimen/w32"
        android:textColor="@color/white"
        android:background="@drawable/sl_red_item"
        android:enabled="false"
        android:text="加入购物车"/>
</RelativeLayout>