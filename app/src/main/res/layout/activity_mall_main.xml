<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="45dp"
            >
            <android.support.v7.widget.RecyclerView
                android:id="@+id/mallMainRv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:splitMotionEvents="false"/>
        </android.support.v4.widget.SwipeRefreshLayout>
        <com.thinkeract.tka.widget.filterview.FilterView
            android:id="@+id/filterView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/addCartLayout"
        android:layout_width="@dimen/w90"
        android:layout_height="@dimen/w90"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/w24"
        android:background="@drawable/bg_black_circle_translucent">
        <ImageView
            android:id="@+id/shoppingCartIv"
            android:layout_width="@dimen/w35"
            android:layout_height="@dimen/w32"
            android:src="@mipmap/ic_cart_white"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/cartGoodsCountTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/w18"
            android:textColor="@color/white"
            android:paddingTop="@dimen/w3"
            android:paddingBottom="@dimen/w3"
            android:paddingLeft="@dimen/w8"
            android:paddingRight="@dimen/w8"
            android:gravity="center"
            android:layout_gravity="right"
            android:layout_margin="@dimen/w14"
            android:text="900"
            android:background="@drawable/bg_red_circle"/>
    </FrameLayout>
</FrameLayout>