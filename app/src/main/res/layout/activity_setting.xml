<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

        <RelativeLayout
            android:id="@+id/clearCacheLayout"
            style="@style/ContentRelativeLayout"
            android:background="@color/transparent"
            android:layout_height="@dimen/h90"
            android:paddingLeft="@dimen/w24"
            android:paddingRight="@dimen/w24">


            <TextView
                style="@style/LargeText"
                android:layout_centerVertical="true"
                android:text="清理缓存" />

            <TextView
                android:id="@+id/cacheSizeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/w24"
                android:text="0M"
                android:textColor="@color/textColorPrimaryGray"
                android:textSize="@dimen/w28" />

            <View
                style="@style/DividerLineHorizontal"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/helpAndFeedBackLayout"
            style="@style/ContentRelativeLayout"
            android:background="@color/transparent"
            android:layout_height="@dimen/h90"
            android:paddingLeft="@dimen/w24"
            android:paddingRight="@dimen/w24">


            <TextView
                style="@style/LargeText"
                android:layout_centerVertical="true"
                android:text="填写反馈" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/w24"
                android:drawableRight="@mipmap/ic_arrow_right"
                android:textColor="@color/textColorPrimaryGray"
                android:textSize="@dimen/w28" />

            <View
                style="@style/DividerLineHorizontal"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>
    <View style="@style/SpaceAutoFit"/>

    <TextView
        android:id="@+id/versionTv"
        style="@style/SmallText"
        android:textColor="@color/textColorPrimaryGray"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/h30"
        android:layout_marginBottom="@dimen/h35"
        android:layout_centerVertical="true"
        android:text="" />
</LinearLayout>