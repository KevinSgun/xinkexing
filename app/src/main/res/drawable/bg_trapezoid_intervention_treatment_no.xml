<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape android:shape="rectangle">
            <size android:height="24dp" android:width="90dp"/>
            <solid android:color="#f06560" />
        </shape>
    </item>
    <item android:left="90dp" android:top="-20dp">
        <rotate
            android:fromDegrees="30"
            android:toDegrees="30"
            android:pivotX="-5%"
            android:pivotY="90%">
            <shape android:shape="rectangle">
                <size android:width="15dp" android:height="40dp"/>
                <solid android:color="@android:color/white" />
            </shape>
        </rotate>
    </item>
</layer-list>
